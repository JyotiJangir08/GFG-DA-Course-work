# * * * *
# * * * * *
num=10
for i in range (1 , num+1):
    print('* '*i)
print('&'*10)
# * * * * *
# * * * * 
# * * * 
# * * 
# * 
num = 5
for i in range(num , 0, -1):
    print('* '*i)
print(10*'#')
num = 10 
for i in range(num):
    print('* '*num)
#               *
#           *   *
#       *   *   *
#    *  *   *   *
# *  *  *   *   *
num = 5 
for i in range(0, num-1):
    print(' *'*i )
print('&'*10)


num = 25
isPrime = True
for i in range(2, num):
    if num%i ==0:
        isPrime = False   
num = 5 
if (num%1 == 0) and (num%num == 0):
    print ('Prime')
else :
    print('not Prime')

print('*'*20)
counter = 0
for num in range(1,101):
  val = True 

for i in range(2,num):
    if num%i == 0:
        val = False
        
if val:
    print(num ,'is prime')
else:
    print(num ,'is not prime')
